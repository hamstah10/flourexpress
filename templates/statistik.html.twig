{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
		<div class="row">
			<div class="col-md-12">
    <h1>Statistiken</h1>

    <h2>Gesamteinnahmen</h2>
    <p>Die gesamten Einnahmen aus Verkäufen: {{ gesamtEinnahmen }} €</p>

    <h2>Fahrervergütungen</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Fahrer</th>
                <th>Gesamte Vergütung</th>
            </tr>
        </thead>
        <tbody>
            {% for verguetung in fahrerVerguetung %}
                <tr>
                    <td>{{ verguetung.fahrerName }}</td>
                    <td>{{ verguetung.totalVerguetung }} €</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
			</div>
		</div>
	</div>
{% endblock %}
